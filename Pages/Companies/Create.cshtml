@page
@model RecruitCatNarangdk.Pages.Companies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center alert alert-dark">Create Company</h1>
<hr />
<div class="container">
    <div class="p-2 font-weight-bold text-right">
        <a asp-page="Index">Back to List</a>
    </div>
    <div class="row p-3">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Company.CompanyName" class="control-label"></label>
                    <input asp-for="Company.CompanyName" class="form-control" />
                    <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company.CompanyPosition" class="control-label"></label>
                    <input asp-for="Company.CompanyPosition" class="form-control" />
                    <span asp-validation-for="Company.CompanyPosition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company.MinSalary" class="control-label"></label>
                    <input asp-for="Company.MinSalary" class="form-control" />
                    <span asp-validation-for="Company.MinSalary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company.MaxSalary" class="control-label"></label>
                    <input asp-for="Company.MaxSalary" class="form-control" />
                    <span asp-validation-for="Company.MaxSalary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company.StartDate" class="control-label"></label>
                    <input asp-for="Company.StartDate" class="form-control" />
                    <span asp-validation-for="Company.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company.Location" class="control-label"></label>
                    <textarea rows="5" asp-for="Company.Location" class="form-control" ></textarea>
                    <span asp-validation-for="Company.Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company.IndustryId" class="control-label"></label>
                    <select asp-for="Company.IndustryId" class="form-control" asp-items="ViewBag.IndustryId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Company.NumberOfCandidates" class="control-label"></label>
                    <input asp-for="Company.NumberOfCandidates" class="form-control" />
                    <span asp-validation-for="Company.NumberOfCandidates" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company.CompanyNetWorth" class="control-label"></label>
                    <input asp-for="Company.CompanyNetWorth" class="form-control" />
                    <span asp-validation-for="Company.CompanyNetWorth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
