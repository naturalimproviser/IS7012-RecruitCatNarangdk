@page
@model RecruitCatNarangdk.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center alert alert-success">Company: @Model.Company.CompanyName</h1>

<div class="container">
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.CompanyPosition)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.CompanyPosition)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.NumberOfCandidates)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.NumberOfCandidates)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.CompanyNetWorth)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.CompanyNetWorth)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Company.Industry.IndustryName)
        </dd>
    </dl>
    <div>
        <h2>Customer Details</h2>
        @if (Model.Company.Candidates.Count == 0)
        {
            <div class="alert alert-warning">
                <p>There are no candidates present in this company</p>
            </div>
        }
        else
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Candidate Name</th>
                        <th>Date of Birth</th>
                        <th>Email Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Company.Candidates)
                    {
                        <tr>
                            <td>
                                @customer.FirstName @customer.LastName
                            </td>
                            <td>
                                @customer.DateOfBirth
                            </td>
                            <td>
                                @customer.EmailAddress
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

