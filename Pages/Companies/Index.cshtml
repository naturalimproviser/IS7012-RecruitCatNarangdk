@page
@model RecruitCatNarangdk.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center p-3 alert alert-secondary">All Companies</h1>

<p class="text-right font-weight-bold font-italic p-2">
    <a asp-page="Create">Create new</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MaxSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].NumberOfCandidates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyNetWorth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Company)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCandidates)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyNetWorth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Industry.IndustryName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CompanyId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CompanyId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CompanyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
