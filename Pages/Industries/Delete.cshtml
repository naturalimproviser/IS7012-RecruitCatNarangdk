@page
@model RecruitCatNarangdk.Pages.Industries.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="p-2 text-center alert alert-danger">Delete Industry - @Model.Industry.IndustryName</h1>

