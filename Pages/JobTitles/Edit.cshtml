@page
@model RecruitCatNarangdk.Pages.JobTitles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center alert alert-primary">Edit @Model.JobTitle.JobDescription</h1>
<hr />
<div class="container">
    <div class="p-2 font-weight-bold text-right">
        <a asp-page="./Index">Back to List</a>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="JobTitle.JobTitleId" />
                <div class="form-group">
                    <label asp-for="JobTitle.JobDescription" class="control-label"></label>
                    <input asp-for="JobTitle.JobDescription" class="form-control" />
                    <span asp-validation-for="JobTitle.JobDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobTitle.MinSalary" class="control-label"></label>
                    <input asp-for="JobTitle.MinSalary" class="form-control" />
                    <span asp-validation-for="JobTitle.MinSalary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobTitle.MaxSalary" class="control-label"></label>
                    <input asp-for="JobTitle.MaxSalary" class="form-control" />
                    <span asp-validation-for="JobTitle.MaxSalary" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="JobTitle.IsFullTime" /> @Html.DisplayNameFor(model => model.JobTitle.IsFullTime)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
